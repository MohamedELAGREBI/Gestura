<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Gestura.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Gestura"
    Shell.FlyoutBehavior="Disabled"
    Title="Gestura">

    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate local:Views.HomePage}"
    Route="HomePage" />

    <ShellContent
    Title="Image Gallery"
    ContentTemplate="{DataTemplate local:Views.ImageGalleryPage}"
    Route="ImageGalleryPage"/>

    <ShellContent
    Title="Gestionnaire de Sessions"
    ContentTemplate="{DataTemplate local:Views.DrawingSessionsManagerPage}"
    Route="DrawingSessionsManagerPage"/>

</Shell>
